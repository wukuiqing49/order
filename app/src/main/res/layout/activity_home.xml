<?xml version="1.0" encoding="utf-8"?>
<layout>


    <com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/app_content_bg_color"
        android:clipChildren="false"
        app:qmui_skin_background="?attr/app_skin_common_background">

        <com.qmuiteam.qmui.widget.QMUIViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton

            android:id="@+id/cd_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@color/color_6bd"
            android:clickable="true"
            app:fabCustomSize="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/iv_video_play"
            app:borderWidth="0dp"
            app:elevation="5dp"
            app:rippleColor="@android:color/transparent" />

        <com.qmuiteam.qmui.widget.tab.QMUITabSegment
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/qmui_config_color_white"
            android:textSize="12sp"
            app:qmui_tab_icon_position="top"
            app:qmui_topDividerColor="?attr/qmui_skin_support_color_separator"
            app:qmui_topDividerHeight="1px" />
    </com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
</layout>
